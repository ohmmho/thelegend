<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
      <%= link_to link.title, link %><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.name %></small>
    </h2>
    <p> <%= link.description %> </p>

    <div class="btn-group">
      <a class="btn btn-default btn-sm noticia" href="<%= link.url %>"><img src=" /assets/leer.png" /> Leer Noticia</a>
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm noticia" do %>
        <img src=" /assets/arriba.png" />
        Upvote
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm noticia" do %>
        <img src=" /assets/abajo.png" />
        Downvote
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
    
  </div>
<% end %>